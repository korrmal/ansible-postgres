global
    debug
    log /dev/log local0
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log                     global
    mode                    http
    option                  httplog
    option                  dontlognull
    option                  http-server-close
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          9h
    timeout server          9h
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

listen stats
    bind :9000
    stats enable
    stats uri /
    monitor-uri /healthz

listen psql
    bind :9001
    mode tcp
    option tcplog
    balance leastconn
    {% for host in groups['psql'] %}
    server {{ cluster_name }}-psql-{{ loop.index }} {{ hostvars[host].ansible_default_ipv4.address }}:6443 verify none ssl
    {% endfor %}
